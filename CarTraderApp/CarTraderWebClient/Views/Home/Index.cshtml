    <![endif]-->

    <script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular.min.js")"></script>
    <script src="@Url.Content("~/Scripts/angular-route.min.js")"></script>

    <script src="@Url.Content("~/app/directives/_directives.js")"></script>
    <script src="@Url.Content("~/app/directives/confirmClick.js")"></script>
    <script src="@Url.Content("~/app/controllers/_controllers.js")"></script>
    <script src="@Url.Content("~/app/controllers/allAdverts.js")"></script>
    <script src="@Url.Content("~/app/controllers/newAdvert.js")"></script>
    <script src="@Url.Content("~/app/app.js")"></script>



